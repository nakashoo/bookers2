
<h1>User info</h1>

<% if user && user.profile_image.attached? %>
  <%= image_tag user.profile_image.variant(resize: "75x75").processed, width: 75, height: 75 %>
<% else %>
  <%= image_tag 'default-image.jpeg', width: 75, height: 75 %>
<% end %>


  <table class="table">
    <thead>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
    <tfoot>
    </tfoot>
  </table>

  <div class="row">
    <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fa-solid fa-user-gear"></i>
    <% end %>

  </div>


  <h2 class="mt-3">New book</h2>

  <%= form_with(model: Book.new, local: true) do |form| %>

    <div class="form-group">
      <label for = "book_title" >Title</label>
      <%= form.text_field :title,class: "form-control book_title" %>
    </div>

    <div class="form-group">
      <label for = "book_opinion" >Opinion</label>
      <%= form.text_area :body,class: "form-control book_body" %>
    </div>

    <div class="form-group">
    <%= form.submit "Create Book" , class: "btn btn-success"  %>
    </div>


  <% end %>