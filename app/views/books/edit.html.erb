<p id="notice"></p>
<div class= "container" >
  <div class= "row" >
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
      <h1>Editing Book</h1>

      <%= form_with(model: @book, url: book_path(@book), local: true, method: :patch) do |form| %>
        <div class= "form-group" >
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        </div>

        <div　class= "form-group">
        <%= form.label :opinion %><br>
        <%= form.text_area :opinion %>
        </div>

        <div　class= "form-group">
        <%= form.submit "Update User",class: 'btn btn-success' %>
        </div>

        <%= link_to 'Show',book_path(@book.id) %>|<%= link_to 'Back',books_path %>
      <% end %>
    </div>
  </div>
</div>