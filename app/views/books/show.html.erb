<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>
<div class="container" >
  <div class= "row">
    <div class= "col-md-3">
    <%= render 'books/book',user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
          <td><%= link_to image_tag(@book.user.get_profile_image, size: "100x100"), user_path(@user.id) %>
              <br><%= link_to(@book.user.name, user_path(@user.id)) %></td>

          <td><%= link_to @book.title,book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @user == current_user %>
          <td><%= link_to 'Edit',edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_115083" %></td>
          <td><%= link_to 'Destroy',book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book" , data: { confirm: '本当に削除しますか？' } %></td>
          <% end %>
          </tr>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>
   </div>

