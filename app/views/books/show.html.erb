<p id="notice"></p>
<div class="container" >
  <div class= "row">
    <div class= "col-md-3">
    <%= render 'books/book',user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <thead>
          <tr>
