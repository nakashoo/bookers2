<p id="notice"></p>
<div class="container px-5 px-sm-0" >

     <% if @book.errors.any? %>
        <h2><%= @book.errors.count %> errors prohibited this user from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>


  <div class= "row">
    <div class= "col-md-3">
      <%= render 'books/book',user: @user, book: @book %>
    </div>

    <div class= "col-md-8 offset-md-1">
    <h1>Books</h1>

    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
          <% @books.each do |book| %>
        <tr>
        <td><%= image_tag book.user.get_profile_image,size: "100x100" %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.opinion %></td>
        <td></td>
        <td></td>
        </tr>
        <% end %>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
    </div>
  </div>
</div>
