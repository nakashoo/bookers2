<div>
  <%= flash[:notice] %>
</div>



<p id="notice"></p>
<div class="container px-5 px-sm-0" >
  <div class= "row">
    <div class= "col-md-3">
      <%= render 'books/book',user: @user, book: @book %>
    </div>

    <div class= "col-md-8 offset-md-1">
    <h1>Books</h1>

    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @user.books.each do |book| %>
        <tr>
        <td><%= image_tag book.user.get_profile_image,size: "100x100" %></td>
        <td><%=  link_to book.title,book_path(book.id) %></td>
        <td><%= book.opinion %></td>
        </tr>
        <% end %>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
    </div>
  </div>
</div>
