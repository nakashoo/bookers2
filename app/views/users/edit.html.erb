
<p id="notice"></p>
<div class="container" >
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>


      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> errors prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>


      <%= form_with(model: @user, url: user_path, local: true) do |form| %>

      <div class= "form-group" >
        <label for = "user_name">Name</label>
        <%= form.text_field :name ,class: "form-control name" %>
      </div>

      <div class= "form-group" >
        <label for = "user_image">Image</label>
        <%= form.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" ,class: "form-control-file user_image" %>
      </div>

       <div class= "form-group" >
        <label for = "user_name">Introduction</label>
        <%= form.text_area :introduction,class: "form-control introduction" %>
      </div>

       <div class= "form-group" >
        <%= form.submit "Update User",class: 'btn btn-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>