<p id="notice"></p>
<div class="container" >
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= form_with(model: @user, url: user_path, local: true) do |form| %>
      <div class= "form-group" >
        <%= form.label :Name %><br>
        <%= form.text_field :name %>
      </div>

       <div class= "form-group" >
        <%= form.label :Introduction %><br>
        <%= form.text_area :introduction %>
      </div>

       <div class= "form-group" >
        <%= form.submit "Update User",class: 'btn btn-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>