<p id="notice"></p>
<div class="container" >
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0" >
    <h2>Sign up</h2>

      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> errors prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>


      <%= form_with model: @user, url: user_registration_path do |f| %>
        <div class="form-group">

        <div class="field">
          <label for = "user_name" >Name</label><br>
          <%= f.text_field :name ,class: "name"  %>
        </div>

        <div class="field">
          <label for = "user_email" >Email</label><br>
          <%= f.email_field :email, class: "email" %>
        </div>

        <div class="field">
          <label for = "user_password" >Password</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br>
          <%= f.password_field :password, class: "password"%>
        </div>

        <div class="field">
          <label for = "user_password_confirmation" >Password confirmation</label><br>
          <%= f.password_field :password_confirmation, class: "password_confirm" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" ,class: "btn btn-sm btn-success"   %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>

       </div>
    </div>
  </div>
</div>

