<p id="notice"></p>
<div class="container" >
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0" >
    <h2>Log in</h2>

      <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field">
        <label for = "user_name" >Name</label><br>
        <%= f.text_field :name ,class: "name"  %>
      </div>


      <div class="field">
        <label for = "user_password" >Password</label><br>
        <%= f.password_field :password, class: "password_confirm" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" ,class: 'btn btn-sm btn-primary'  %>
      </div>
      <% end %>

      <%#= render "devise/shared/links" %>
       <%= link_to 'Sign up',new_user_registration_path %><br>
       <%= link_to 'Forget your password?',new_user_password_path %>
    </div>
  </div>
</div>
